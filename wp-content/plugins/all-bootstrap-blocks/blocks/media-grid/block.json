	"apiVersion": 2,
	"name": "areoi/media-grid",
	"title": "Media Grid",
	"category": "areoi-strips",
	"description": "Display multiple medias in a rich gallery.",
	"keywords": [ "images", "photos" ],
	"textdomain": "default",
